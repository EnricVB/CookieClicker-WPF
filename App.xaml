<Application x:Class="CookieClicker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CookieClicker"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ImageBrush x:Key="AllowedButtonTile" ImageSource="assets/buttonTile.png" TileMode="None" Viewport="0,0,1,2" ViewportUnits="RelativeToBoundingBox"/>
        <ImageBrush x:Key="UnallowedButtonTile" ImageSource="assets/buttonTile.png" TileMode="None" Viewport="0,-1,1,2" ViewportUnits="RelativeToBoundingBox"/>
    </Application.Resources>
</Application>
